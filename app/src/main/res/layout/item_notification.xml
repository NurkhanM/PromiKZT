<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowCostomFavorite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        app:cardCornerRadius="@dimen/all_radius_12dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/itemNewState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:visibility="visible"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtListType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:text="@string/descrip_test"
                    android:textColor="@color/fon1"
                    android:textSize="16sp"
                    android:visibility="visible" />
                <TextView
                    android:id="@+id/newBoargMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:text="@string/new_text"/>


            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtListTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:maxLines="5"
                        android:text="@string/name_string"
                        android:textSize="16sp"
                        android:textStyle="bold|normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtListName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:maxLines="7"
                        android:text="@string/todo"
                        android:textColor="@color/black2"
                        android:textSize="14sp"
                        android:visibility="visible" />

                </LinearLayout>

            <TextView
                android:id="@+id/notifDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="end"
                android:textStyle="italic"
                android:textColor="@color/black4"
                android:text="@string/todo"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>