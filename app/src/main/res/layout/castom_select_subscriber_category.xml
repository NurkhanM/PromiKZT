<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowCostomCaSelect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:background="@drawable/button_background2"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintBottom_toTopOf="@+id/viewArt"
        app:layout_constraintEnd_toStartOf="@+id/imgSubscriber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/txtSelectCa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginHorizontal="5dp"
            android:text="@string/register_message_email"
            android:textColor="@color/fon1"
            android:textSize="16sp"
            android:textStyle="bold|normal" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgSubscriber"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:contentDescription="@string/todo"
        android:src="@drawable/ic_star"
        app:tint="@color/fon1"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/viewArt"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>